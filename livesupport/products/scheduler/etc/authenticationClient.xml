<!ATTLIST location port     NMTOKEN     #REQUIRED >
<!ATTLIST location path     CDATA       #REQUIRED >

]>
<authenticationClientFactory>
    <testAuthentication>
        <user login="root" password="q" />
    </testAuthentication>
    <webAuthentication>
        <location server="localhost" port="80" 
                  path="/storage/var/xmlrpc/xrLocStor.php" />
    </webAuthentication>
</authenticationClientFactory>
